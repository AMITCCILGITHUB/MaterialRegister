<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class catalog="metalplants" name="org.map.hibernate.ddo.MaterialMaster"
		table="materialmaster" dynamic-update="true">
		<id name="ctNumber" type="string">
			<column length="64" name="Ct_Number" />
			<generator class="assigned" />
		</id>
		<many-to-one name="inspectionAgency" column="Inspection_Agency" class="org.map.hibernate.ddo.AgencyMaster"></many-to-one>
		<many-to-one name="specification" column="Specification" class="org.map.hibernate.ddo.SpecificationMaster"></many-to-one>
		<many-to-one name="item" column="Item" class="org.map.hibernate.ddo.ItemMaster"></many-to-one>
		<property name="size" type="string">
			<column length="64" name="Size" />
		</property>
		<property name="quantity" type="int">
			<column name="Quantity" />
		</property>
		<property name="heatNumber" type="string">
			<column length="128" name="Heat_Number" />
		</property>
		<property name="plateNumber" type="string">
			<column length="128" name="Plate_Number" />
		</property>
		<property name="sampleId" type="string">
			<column length="32" name="Sample_Id" />
		</property>
		<many-to-one name="test" column="Test" class="org.map.hibernate.ddo.TestMaster"></many-to-one>
		<many-to-one name="customer" column="Customer" class="org.map.hibernate.ddo.CustomerMaster"></many-to-one>
		<property name="equipments" type="string">
			<column length="128" name="Equipments" />
		</property>
		<many-to-one name="laboratory" column="Laboratory" class="org.map.hibernate.ddo.LaboratoryMaster"></many-to-one>
		<property name="reportDate" type="string">
			<column length="64" name="Report_Date" />
		</property>
		<property name="reportNumber" type="string">
			<column length="128" name="Report_Number" />
		</property>
		<many-to-one name="result" column="Result" class="org.map.hibernate.ddo.ResultMaster"></many-to-one>
		<property name="remarks" type="string">
			<column length="128" name="Remarks" />
		</property>
		<property name="witnessedBy" type="string">
			<column length="128" name="Witnessed_By" />
		</property>
		<property name="failureReason" type="string">
			<column length="256" name="Failure_Reason" />
		</property>
		<property name="status" type="string">
			<column length="8" name="Status" />
		</property>
		<property name="createdBy" type="string">
			<column length="32" name="Created_By" />
		</property>
		<property name="createdDate" type="java.util.Date">
			<column length="19" name="Created_Date" />
		</property>
	</class>
	<sql-query name="nextCtNumberQuery">
        <![CDATA[select concat('MP', :year, '/', ifnull(max(cast(substring(substring_index(Ct_Number, '-', 1), 6) as unsigned)), 0) + 1) from materialmaster where substring(substring_index(Ct_Number, '-', 1), 3, 2) = :year]]>
	</sql-query>
	<sql-query name="searchCtNumberQuery">
		<return alias="stock" class="org.map.hibernate.ddo.MaterialMaster" />
        <![CDATA[select * from materialmaster where cast(substring(substring_index(Ct_Number, '-', 1), 6) as unsigned) between cast(substring(substring_index(:fromCtNumber, '-', 1), 6) as unsigned) and cast(substring(substring_index(:toCtNumber, '-', 1), 6) as unsigned) and substring(substring_index(Ct_Number, '-', 1), 3, 2) = substring(substring_index(:fromCtNumber, '-', 1), 3, 2) order by cast(substring(substring_index(Ct_Number, '-', 1), 6) as unsigned) asc]]>
	</sql-query>
	<sql-query name="searchCtNumberQuerySingle">
		<return alias="stock" class="org.map.hibernate.ddo.MaterialMaster" />
        <![CDATA[select * from materialmaster where cast(substring(substring_index(Ct_Number, '-', 1), 6) as unsigned) >= cast(substring(substring_index(:fromCtNumber, '-', 1), 6) as unsigned) and substring(substring_index(Ct_Number, '-', 1), 3, 2) = substring(substring_index(:fromCtNumber, '-', 1), 3, 2) order by cast(substring(substring_index(Ct_Number, '-', 1), 6) as unsigned) asc]]>
	</sql-query>
	<filter-def name="printFilter"></filter-def>
</hibernate-mapping>
